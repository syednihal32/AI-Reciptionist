# AI Voice Receptionist Agent - Environment Configuration

# ============================================
# LLM Configuration (Groq)
# ============================================

# Groq Configuration
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama3-8b-instant

# ============================================
# Database Configuration
# ============================================

# SQLite database URL (local file)
DB_URL=sqlite:///./data/conversations.db

# ============================================
# Audio Configuration
# ============================================

# Directory for generated TTS audio files
AUDIO_OUTPUT_DIR=./data/audio_responses

# Directory for temporary audio files
AUDIO_TEMP_DIR=./data/temp_audio

# ============================================
# Company Configuration
# ============================================

# Company name (used in receptionist prompts)
COMPANY_NAME=Acme Corp

# ============================================
# Backend Server Configuration
# ============================================

# Backend host (0.0.0.0 for all interfaces)
BACKEND_HOST=0.0.0.0

# Backend port
BACKEND_PORT=8000

# ============================================
# Frontend Configuration
# ============================================

# Frontend base URL (for CORS and redirects)
FRONTEND_BASE_URL=http://localhost:8501

